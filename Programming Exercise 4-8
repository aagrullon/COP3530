#include<iostream>

using namespace std;

int main( )

{

int x, y;

char choose;

cout<<"Enter first number : ";

cin>>x;

cout<<"\n Enter second number : ";

cin>>y;

cout<<"\n Enter your choice of operation :" << "\n Addition : +" << "\n Subtraction : -" << "\nMultiplication : *" << "\n Division : / \n" ;

cin >> choose;

cout << endl << endl << "\t" << x << " " << choose << " " << y << " = ";

switch ( choose )

{

case '+' : cout << x + y;

break;

case '-' : cout << x - y;

break;

case '*' : cout << x * y;

break;

case '/' : if ( y == 0 )

cout<<"\nDenominator canâ€™t be zero";

else

cout << x / y;

break;

default : cout << "Invalid choice";

}

system("pause");

}
